<div>
  <p>
    <h2 class="border wedgwood leftline3"><%= @title.title %></h2>
  </p>
</div>

<p id="notice"><%= notice %></p>

<form class="form-horizontal fixed">
  <fieldset>

    <div class="control-group">
      <label class="control-label">著者</label>
      <div class="controls controls-text">
        <%= @title.author %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">全開揃い</label>
      <div class="controls controls-text">
        <% if @title.complete %>
          <i class="icon-ok"></i>
        <% else %>
          (未)
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">登録日</label>
      <div class="controls controls-text">
        <%= l @title.created_at %>
      </div>
    </div>

  </fieldset>
</form>

<table class="table table-bordered table-striped table-condensed">

<thead>
  <tr>
    <th>巻数</th>
    <th>登録日</th>
    <th>更新日</th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @title.books.sort{ |a, b| a.volume <=> b.volume }.each do |book| %>
  <tr>
    <td><%= book.volume %></td>
    <td><%= l book.created_at %></td>
    <td><%= l book.updated_at %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>

</table>

<%= link_to 'Edit', edit_title_path(@title) %> |
<%= link_to 'Back', titles_path %>
